<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001F3F">

    <!-- Título -->
    <TextView
        android:id="@+id/textTituloMisReservas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Reservas"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

        <!-- Recycler de reservas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMisReservas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textTituloMisReservas"
        app:layout_constraintBottom_toTopOf="@id/btnVolverCatalogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón volver al catálogo -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolverCatalogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Volver al Catálogo"
        android:textColor="#FFFFFF"
        app:backgroundTint="#FF9800"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
