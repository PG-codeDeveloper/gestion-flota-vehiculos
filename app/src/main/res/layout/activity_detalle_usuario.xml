<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001F3F">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textColor="#FFFFFF"
            app:backgroundTint="#FF9800"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Datos del usuario -->
        <TextView
            android:id="@+id/textNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textEmailUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="#CCCCCC" />

        <TextView
            android:id="@+id/textRolUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rol:"
            android:textColor="#CCCCCC" />

        <!-- Historial -->
        <TextView
            android:id="@+id/textHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial de uso:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerReservas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</ScrollView>
