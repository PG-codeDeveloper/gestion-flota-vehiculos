<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001F3F"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

            <!-- Título -->
    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panel de administración"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <!-- Botón Ver Usuarios -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver usuarios"
        android:textColor="#FFFFFF"
        app:backgroundTint="#FF9800"
        app:cornerRadius="24dp"
        android:layout_marginBottom="16dp" />

            <!-- Botón Ver Reservas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerReservas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver reservas"
        android:textColor="#FFFFFF"
        app:backgroundTint="#FF9800"
        app:cornerRadius="24dp"
        android:layout_marginBottom="32dp" />

    <!--  Texto para cerrar sesión -->
    <TextView
        android:id="@+id/textCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Quieres salir? Cierra sesión aquí"
        android:textColor="#FF9800"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />
</LinearLayout>
